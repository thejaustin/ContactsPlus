<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_dialog">

    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_lg"
        android:gravity="center"
        android:text="@string/no_social_links"
        android:textAppearance="@style/TextAppearance.ContactsPlus.BodyLarge"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/social_links_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detect_social_links_button"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target_min"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:layout_weight="1"
            android:text="@string/detect_social_links"
            app:cornerRadius="@dimen/corner_radius_xl"
            app:icon="@drawable/ic_search_vector"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_social_link_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target_min"
            android:layout_weight="1"
            android:text="@string/add_social_link"
            app:cornerRadius="@dimen/corner_radius_xl"
            app:icon="@drawable/ic_plus_vector"
            app:iconGravity="textStart" />

    </LinearLayout>

</LinearLayout>
